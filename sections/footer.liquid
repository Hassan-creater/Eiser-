{% assign links_footer = linklists.footer %}


<footer class="bg-gray-900 text-white py-[8em] overflow-hidden px-[5em]">
  <div class="container mx-auto px-4">
    <div class="w-full flex flex-col gap-6 lg:gap-0 lg:flex-row  justify-between">
      <!-- Top Products -->
       {% for links in links_footer.links %}
        
        <div class="text-[14px] roboto ">
          <h4 class=" font-semibold mb-6 text-[18px]">{{ links.title }}</h4>
          <ul class="space-y-3">
            {% for subLinks in links.links %}
              
              <li><a href="{{ subLinks.url }}" class="text-gray-400 hover:text-white transition">{{ subLinks.title }}</a></li>
            {% endfor %}
            
          </ul>
        </div>
       {% endfor %}
      
    
      <!-- Newsletter -->
       {% if section.settings.newsletter %}
        
        <div>
          <h4 class="text-xl font-semibold mb-6">Newsletter</h4>
          <p class="text-gray-400 mb-4">You can trust us. we only send promo offers,</p>
          <div>
            <form target="_blank" action="https://spondonit.us12.list-manage.com/subscribe/post?u=1462626880ade1ac87bd9c93a&amp;id=92a4423d01" method="get" class="flex flex-col sm:flex-row gap-2">
              <input class="bg-gray-800 text-white px-4 py-2 rounded focus:outline-none focus:ring-2 focus:ring-green-500" name="EMAIL" placeholder="Your Email Address" required type="email">
              <button class="bg-green-500 hover:bg-green-600 text-white px-6 py-2 rounded transition">Subscribe</button>
              <div class="absolute left-[-5000px]">
                <input name="b_36c4fd991d266f23781ded980_aefe40901a" tabindex="-1" value="" type="text">
              </div>
            </form>
          </div>
        </div>
       {% endif %}
    </div>
    
    <!-- Footer Bottom -->
    <div class="mt-12 pt-8 border-t border-gray-800 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-400 text-center md:text-left mb-6 md:mb-0">
        Copyright &copy;2025 All rights reserved 
        
      </p>
      <div class="flex items-center justify-center space-x-4">
         <a href="#" class="w-[40px] h-[40px] bg-slate-700 hover:bg-green-500 duration-300 flex justify-center items-center"><i class="fa-brands fa-facebook-f"></i></a>
         <a href="#" class="w-[40px] h-[40px] bg-slate-700 hover:bg-green-500 duration-300 flex justify-center items-center"><i class="fa-brands fa-twitter"></i></a>
         <a href="#" class="w-[40px] h-[40px] bg-slate-700 hover:bg-green-500 duration-300 flex justify-center items-center"><i class="fa-brands fa-xbox"></i></a>
         
         <a href="#" class="w-[40px] h-[40px] bg-slate-700 hover:bg-green-500 duration-300 flex justify-center items-center"><i class="fa-brands fa-behance"></i></a>
      </div>
    </div>
  </div>
</footer> 

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "newsletter",
      "default": true,
      "label": "Newsletter"
    }
    ]
}
{% endschema %}